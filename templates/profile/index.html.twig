{% extends 'base.html.twig' %}



{% block body %}
{% if app.user %}
<div class="container">
    <div class="row">
    <link type="text/css" href="css/profile.css" rel="stylesheet">
    <div class="col-6">
        <div id="content-box" class="profile">
            <div class="bg"></div>
            <div class="overlay">
                <div class="avatar-image" style="background-image:url(https://imaging.habibo.me/imaging/?figure={{ app.user.look }}&size=l&head_direction=3&gesture=sml)"></div>

                <div class="username">{{ app.user.username }}</div>
                <div class="motto">{{ app.user.motto }}</div>

                <div class="last-online">Tu es le {{ app.user.id }}Ã¨me inscrit !</div>
            </div>
            <div style="clear:both"></div>
        </div>

        
        <div class="tease_rooms"></div>
        <div id="content-box">
            <div class="title-box png20">
                <div class="title">Room</div>
                <div class="desc">Voici tes rooms</div>
            </div>
            <div class="png20">
                {% for roomsUsers in roomsUsers %}
                
                <div class="room-thumbnail">
                    <div class="room-name">{{ roomsUsers.name }}</div>
                </div>
                {% endfor %}
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="col-6">
        <div class="tease_friends"></div>
        <div id="content-box">
            <div class="title-box png20">
                <div class="title"> Amis </div>
                <div class="desc">Consultez la liste de tes amis</div>
            </div>
            <div class="png20">
                {% for friendUsers in friendUsers %}
                <a href="profile.php" class="friends-head" style="background-image:url(http://habbo.com/habbo-imaging/avatarimage?figure=hr-155-31.lg-275-82.hd-180-1391.ch-3323-73-1408.sh-295-1408&size=b&head_direction=3&gesture=sml&headonly=1)">
                    <div class="username">{{ friendUsers.usertwoid }}</div></a>
                {% endfor %}
                <div class="clear"></div>
            </div>
        </div>

        <div class="tease_groups"></div>
        <div id="content-box">
            <div class="title-box png20">
                <div class="title">Gruppen</div>
                <div class="desc">Schau dir die Gruppen von Sonay an</div>
            </div>
            <div class="png20">
                <div class="group-badge" style="background-image:url(https://www.habbo.de/habbo-imaging/badge/b06094s03175s42174s111171b975e2f5442a16940495a2745449793.gif))"><div class="group-name">Lorem</div></div>
                
                <div class="clear"></div>
            </div>
        </div>
    </div>

   
    
    {% endif %}
{% endblock %}

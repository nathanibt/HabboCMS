<!DOCTYPE html>

<head>
    {% if app.user %}
    <meta charset="utf-8">

    <title>Habbo: {{ app.user.username }}</title>

    <link rel="icon"  href="favicon.ico" />
    <link type="text/css" href="css/style.css" rel="stylesheet">
    
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <div id="header-content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hotel"></div>
                    <a href="client" class="btn green big check-in-header" target="_blank">HOTEL NITRO</a>
                   
                </div>
               
            </div>
        </div>
    </div>
    <div id="header-menu">
        <div class="container">
            <div class="row">
                <div class="col-5">
                    <ul class="user-menu">
                        <li>
                            <a href="{{ path('app_me')}}">

                                <div class="user-avatar-menu"
                                    style="background-image:url(https://imaging.habibo.me/imaging/?figure={{ app.user.look }}&head_direction=3&gesture=sml)">

                                </div>{{ app.user.username }}<span>
                                    <i class="far fa-angle-down"></i></span>

                            </a>

                            <ul class="user-subnavi">
                                <li><a href="{{ path('app_profile')}}">Mon profil</a></li>
                                {% if app.user.rank > 5 %}
                                <li><a href="{{ path('app_logout')}}" class="logout">Administration</a></li>
                                {% endif %}
                                <li><a href="{{ path('app_logout')}}" class="logout">Deconnexion</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-2">
                    <a href="\" class="logo"></a>
                </div>
                <div class="col-5">
                    <ul class="navigation">
                        <li>
                            <a href="community.php">Communauté<span><i class="far fa-angle-down"></i></span></a>

                            <ul class="subnavi">
                                <li><a href="{{ path('app_news')}}">News</a></li>
                                <li><a href="{{ path('app_staff')}}">Equipe</a></li>
                                <li><a href="{{ path('app_secondary_staff')}}">Equipe secondaire </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>



    {% block body %}


    {% endblock %}

    <div class="col-12">
        <div id="footer-content">
            <ul class="footer-links">
                <li><a href="{{ path('app_me')}}">Home </a></li>
                <li><a href="{{ path('app_staff')}}">Equipe Staff </a></li>
            </ul>

            <p>Copyright &copy; 2023 Habbo Hotel. All rights reserved.<br />Habbo is no way affiliated with Sulake
                Corporation Oy.<br />Développé par <b>Zorked</b> et <b>maquette</b> par <b>Sonay</b></p>
        </div>
    </div>
    </div>
    </div>

    <script type="text/javascript" src="js/vendor.js"></script>
    <script type="text/javascript" src="js/app.js"></script>

</body>

</html>
{% endif %}
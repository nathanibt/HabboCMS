{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Motto</th>
                <td>{{ user.motto }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ user.rank }}</td>
            </tr>
            <tr>
                <th>Look</th>
                <td>{{ user.look }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ user.online }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_users_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_users_edit', {'id': user.id}) }}">edit</a>

    {{ include('backoffice/users/_delete_form.html.twig') }}
{% endblock %}

{% extends '/backoffice/base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ news.subtitle }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ news.text }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ news.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_news_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_news_edit', {'id': news.id}) }}">edit</a>

    {{ include('backoffice/news/_delete_form.html.twig') }}
{% endblock %}

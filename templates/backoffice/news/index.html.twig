
{% extends '/backoffice/base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Text</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.subtitle }}</td>
                <td>{{ news.text }}</td>
                <td>{{ news.image }}</td>
                <td>
                    <a href="{{ path('app_backoffice_news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('app_backoffice_news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_news_new') }}">Create new</a>
{% endblock %}

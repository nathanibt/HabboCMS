<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Habbo: World Connected</title>

    <link type="text/css" href="css/index.css" rel="stylesheet">
</head>

<body>
    <!--<div class="error-msg">Die Felder müssen ausgefüllt sein.</div>-->

    <div class="hero">
        <div class="hotel"></div>
    </div>

    <div id="header-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="logo"></div>
                    <div class="online-count"><b>1337</b> Habbos online</div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="login-position">
                    <h2>Bienvenue</h2>


                    <form method="post">
                        {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                        {% endif %}



                        <h1 class="h3 mb-3 font-weight-normal">Se connecter </h1>
                        <label for="inputUsername">Pseudo</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                            class="form-control" autocomplete="username" required autofocus>
                        <label for="inputPassword"> Mot de passe </label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                            autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <button class="btn big green register-button" type="submit">
                            Connexion
                        </button>
                        
                        
                    </form>

                    <div class="clear"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <p>ou</p>
                        </div>
                        <div class="col-md-12">
                            <a  href="{{ path('app_register') }}" class="btn big orange register-button">Inscription</a>
                        </div>
                        
                        
         

                    </div>

                </div> 

            </div>
 
        </div>
      
       
    </div>
</body>

</html>
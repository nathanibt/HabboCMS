{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
    <div class="col-4">
        <div id="content-box">
            <div class="title-box png20">
                <form action="{{ path('app_news')}}">
                    <button class="title btn red" type="submit">Retour au news</button>
                </form>
                
            </div>
            
            <div class="png20">
                <ul class="news-list">
                    <li><a class="selected" href="">{{ news.title }}</a></li>
                </ul>
                
                <br>
                
            </div>
            
            
        </div>
       
    </div>
    <div class="col-8">
        <div id="content-box">
            <div class="title-box png20">
                <div class="title">{{ news.title }}</div>
                <div class="desc">{{ news.description }}</div>
            </div>
            <div class="png20">
                {{ news.content }}
            </div>
        </div>
    </div>
    </div>
</div>

{% endblock %}